<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context="mra.com.vehicletracker.SendAdmin">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Admin Detais"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:fontFamily="serif"

        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp">

        <RelativeLayout
            android:id="@+id/orel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <EditText
                android:id="@+id/oname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="80dp"
                android:hint="Old User Name"
                android:textColorHint="@color/white"
                android:inputType="text"
                />

            <EditText
                android:id="@+id/opass"
                android:layout_below="@id/oname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:hint="Old Password"
                android:textColorHint="@color/white"
                android:inputType="textPassword"
                android:layout_marginTop="5dp"
                />

            <Button
                android:id="@+id/check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/opass"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:text="Check"
                android:textAllCaps="true"
                android:fontFamily="serif"
                android:textColor="@color/white"
                android:background="@color/buttoncolor"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nrel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/orel"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            >


            <EditText
                android:id="@+id/NewN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="80dp"
                android:hint="New User Name"
                android:textColorHint="@color/white"
                android:inputType="text"
                />

            <EditText
                android:id="@+id/NewP"
                android:layout_below="@id/NewN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:hint="New Password"
                android:textColorHint="@color/white"
                android:inputType="textPassword"
                android:layout_marginTop="5dp"
                />

            <Button
                android:id="@+id/check1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/NewP"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:text="Change"
                android:textAllCaps="true"
                android:fontFamily="serif"
                android:textColor="@color/white"
                android:background="@color/buttoncolor"
                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
