<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context="mra.com.vehicletracker.VehicleScanningActivity">


    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/ap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/MenuStyle"/>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">


       </RelativeLayout>

    </android.support.design.widget.AppBarLayout>
    </RelativeLayout>



    <RelativeLayout
        android:layout_below="@id/rel1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="310dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAllCaps="true"
        android:text="Police Man"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:fontFamily="serif"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv"/>

    <ImageView
        android:id="@+id/img12"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:padding="20dp"
        android:src="@drawable/l"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v"
        android:layout_marginTop="20dp"
        >
        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/texthai"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:hint="Enter Vehicle number or Scan"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="@color/ppcolor"
            android:textSize="20dp"/>
        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>
    <Button
        android:layout_below="@+id/r1"
        android:id="@+id/getinfo"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:text="GET VEHICLE INFO"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/ppcolor"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/prac"
        android:visibility="gone"
        android:layout_below="@+id/getinfo"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/detect"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Detect"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/buttoncolor"
        android:layout_margin="10dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/snap"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Take Picture"
        android:background="@color/buttoncolor"
        android:layout_margin="10dp"
        android:textStyle="bold"/>

    </RelativeLayout>


</RelativeLayout>
